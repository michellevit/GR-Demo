<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :product_name, style: "display: block" %>
    <%= form.text_field :product_name %>
  </div>

  <div>
    <%= form.label :user, style: "display: block" %>
    <%= form.text_field :user %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :flex_price, style: "display: block" %>
    <%= form.check_box :flex_price %>
  </div>

  <div>
    <%= form.label :ratings_count, style: "display: block" %>
    <%= form.number_field :ratings_count %>
  </div>

  <div>
    <%= form.label :average_rating, style: "display: block" %>
    <%= form.text_field :average_rating %>
  </div>

  <div>
    <%= form.label :download_count, style: "display: block" %>
    <%= form.number_field :download_count %>
  </div>

  <div>
    <%= form.submit %>
  </div>
